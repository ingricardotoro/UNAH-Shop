# Variables de Entorno - UNAH Shop

# ================================
# CONFIGURACIÓN DE BASE DE DATOS
# ================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=tu_supabase_url_aqui
NEXT_PUBLIC_SUPABASE_ANON_KEY=tu_supabase_anon_key_aqui
SUPABASE_SERVICE_ROLE_KEY=tu_supabase_service_role_key_aqui

# Database URL para microservicios
DATABASE_URL=postgresql://usuario:password@host:puerto/database

# ================================
# CONFIGURACIÓN DE MICROSERVICIOS
# ================================

# Puertos de los microservicios
CUSTOMERS_SERVICE_PORT=3001
PRODUCTS_SERVICE_PORT=3002
CART_SERVICE_PORT=3003
ORDERS_SERVICE_PORT=3004

# URLs de los microservicios (para comunicación entre servicios)
CUSTOMERS_SERVICE_URL=http://localhost:3001
PRODUCTS_SERVICE_URL=http://localhost:3002
CART_SERVICE_URL=http://localhost:3003
ORDERS_SERVICE_URL=http://localhost:3004

# ================================
# CONFIGURACIÓN DE FRONTEND
# ================================

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=tu_nextauth_secret_muy_seguro_aqui

# API Base URLs
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api
NEXT_PUBLIC_CUSTOMERS_API=http://localhost:3001/api
NEXT_PUBLIC_PRODUCTS_API=http://localhost:3002/api
NEXT_PUBLIC_CART_API=http://localhost:3003/api
NEXT_PUBLIC_ORDERS_API=http://localhost:3004/api

# ================================
# APIS EXTERNAS
# ================================

# FakeStore API (o alternativa)
EXTERNAL_PRODUCTS_API=https://fakestoreapi.com
EXTERNAL_PRODUCTS_API_KEY=no_required_for_fakestore

# DummyJSON API (alternativa)
# EXTERNAL_PRODUCTS_API=https://dummyjson.com
# EXTERNAL_PRODUCTS_API_KEY=no_required

# ================================
# CONFIGURACIÓN DE DESARROLLO
# ================================

# Environment
NODE_ENV=development

# Logging Level
LOG_LEVEL=debug

# CORS Origins
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004

# ================================
# CONFIGURACIÓN DE SEGURIDAD
# ================================

# JWT Secrets (genera tus propios valores seguros)
JWT_SECRET=tu_jwt_secret_muy_seguro_para_desarrollo
JWT_EXPIRES_IN=24h

# Session Secret
SESSION_SECRET=tu_session_secret_muy_seguro_aqui

# ================================
# CONFIGURACIÓN DE CACHE
# ================================

# Redis (opcional, para cache avanzado)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Cache TTL (Time To Live) en segundos
PRODUCTS_CACHE_TTL=300
CART_CACHE_TTL=600

# ================================
# CONFIGURACIÓN DE EMAIL (Opcional)
# ================================

# Para notificaciones de órdenes
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_app_password

# ================================
# CONFIGURACIÓN DE DEPLOYMENT
# ================================

# Vercel (Frontend)
VERCEL_URL=

# Railway (Backend) o similar
RAILWAY_STATIC_URL=

# ================================
# CONFIGURACIÓN DE MONITOREO
# ================================

# Analytics (opcional)
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=

# ================================
# CONFIGURACIÓN EDUCATIVA
# ================================

# Flags para habilitar/deshabilitar ejemplos educativos
ENABLE_XHR_EXAMPLES=true
ENABLE_OOP_EXAMPLES=true
ENABLE_FUNCTIONAL_EXAMPLES=true
ENABLE_SPA_VERSION=true
ENABLE_PERFORMANCE_LOGGING=true